lane :bonjour do

  scan(
  code_coverage: true
  )
  xcov

end

lane :deploy do
  version = get_version_number()
  if git_branch() == "master"
    set_github_release(
      repository_name: "fastlane-demo",
      api_token: ENV["GITHUB_TOKEN"],
      name: version,
      tag_name: "v#{version}",
      description: changelog_from_git_commits(),
      commitish: "master"
    )
  end

end
